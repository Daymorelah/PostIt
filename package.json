{
  "name": "postit",
  "version": "1.0.0",
  "description": "A simple application that allows friends and colleagues create groups for notifications.",
  "main": "app.js",
  "scripts": {
    "start": "nodemon server/app.js --exec babel-node ",
    "build": "babel app.js -d dist && babel server -d dist/server",
    "server": "nodemon dist/app.js",
    "test": "set NODE_ENV=test&& mocha --compilers js:babel-register server/test/controllers/ --timeout 10000",
    "execute": "babel app.js -d dist && nodemon dist/app.js",
    "cover":"babel-node ./node_modules/babel-istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha -- --compilers js:babel-register server/test/controllers/ --timeout 10000",
    "sass": "sass --watch template/css/mainStyle.scss:template/css/style.css",
    "migrate":"sequelize db:migrate:undo:all && sequelize db:migrate",
    "migrate-test":"set NODE_ENV=test&& sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "start-cover":"npm run migrate-test && npm test && npm run migrate-test && npm run cover"
  },
  "author": "Ademola Hussain",
  "license": "ISC",
  "devDependencies": {
    "babel-istanbul": "^0.12.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.17.2",
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "mocha": "^3.4.2",
    "morgan": "^1.8.2",
    "path": "^0.12.7",
    "pg": "^6.4.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.3.1",
    "sequelize-cli": "^2.7.0",
    "supertest": "^3.0.0"
  }
}
